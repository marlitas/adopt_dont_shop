<h1>Admin Access: Shelters Index</h1>

<% @shelters.each do |shelter| %>
  <div class="index">
    <h3><%= link_to "#{shelter.name}", "/admin/shelters/#{shelter.id}", class: "index" %></h3>
  </div>
<% end %>



<div class="card text-center pending">
  <h4 class="card-title">Shelters with Pending Applications</h4>
  <% @pending_shelters.each do |shelter| %>
    <p class="card-body"><%= shelter.name  %></p>
  <% end %>
</div>

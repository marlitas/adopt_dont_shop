<h1>Edit Pet</h1>
<%= form_with url: "/pets/#{@pet.id}", method: :patch, local: true do |f| %>
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :breed, class: "form-label" %>
  <%= f.text_field :breed, class: "form-control" %>

  <%= f.label :adoptable, class: "form-label" %>
  <%= f.check_box :adoptable %>

  <%= f.label :age, class: "form-label" %>
  <%= f.number_field :age, class: "form-control" %>

  <%= f.submit class: "btn" %>
<% end %>
